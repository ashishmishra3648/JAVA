import java.util.Scanner;
class P7
{
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		System.out.print("Enter no. of lines :");
		int n=sc.nextInt();
		
		for(int i=1;i<=n;i++){
			for(int j=n;j>=i;j--){
				System.out.print(j);
				if(j!=i){
				
				System.out.print("*");
				}
				
			}
				
				System.out.println(" ");
			}
			
			
	}
}

//output :
/*
5*4*3*2*1
5*4*3*2
5*4*3
5*4
5
*/

